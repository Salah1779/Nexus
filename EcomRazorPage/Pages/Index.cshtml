@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section text-center py-5" style="background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%); min-height: 80vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4 fade-in-up">
                    <span class="gradient-text">Welcome to NexaCart</span>
                </h1>
                <p class="lead mb-5 text-secondary fade-in-up" style="animation-delay: 0.2s;">
                    Experience the future of e-commerce with our modern, fast, and secure platform.
                    Discover amazing products and seamless shopping experiences.
                </p>
                <div class="d-flex justify-content-center gap-3 fade-in-up" style="animation-delay: 0.4s;">
                    <a asp-page="/Articles/Index" class="btn btn-primary btn-lg px-4 py-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                            <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                            <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                        </svg>
                        Explore Products
                    </a>
                    <a href="#features" class="btn btn-outline-light btn-lg px-4 py-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                            <path d="M12 17h.01"></path>
                        </svg>
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5" style="background: var(--bg-primary);">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold mb-4 gradient-text">Why Choose NexaCart?</h2>
                <p class="lead text-secondary">Discover the features that make us the preferred choice for modern e-commerce solutions.</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 fade-in-up" style="animation-delay: 0.1s;">
                    <div class="card-body text-center p-4">
                        <div class="mb-3" style="color: var(--teal-primary); font-size: 3rem;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
                            </svg>
                        </div>
                        <h5 class="card-title fw-bold">Lightning Fast</h5>
                        <p class="card-text text-secondary">Experience blazing-fast performance with our optimized platform and modern architecture.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 fade-in-up" style="animation-delay: 0.2s;">
                    <div class="card-body text-center p-4">
                        <div class="mb-3" style="color: var(--teal-primary); font-size: 3rem;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <circle cx="12" cy="16" r="1"></circle>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                        </div>
                        <h5 class="card-title fw-bold">Secure & Reliable</h5>
                        <p class="card-text text-secondary">Your data is protected with enterprise-grade security and 99.9% uptime guarantee.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 fade-in-up" style="animation-delay: 0.3s;">
                    <div class="card-body text-center p-4">
                        <div class="mb-3" style="color: var(--teal-primary); font-size: 3rem;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" a="4" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        </div>
                        <h5 class="card-title fw-bold">User-Friendly</h5>
                        <p class="card-text text-secondary">Intuitive design and seamless user experience that delights customers and boosts conversions.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5" style="background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="fade-in-up">
                    <h3 class="display-4 fw-bold gradient-text mb-2">10K+</h3>
                    <p class="text-secondary mb-0">Happy Customers</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="fade-in-up" style="animation-delay: 0.1s;">
                    <h3 class="display-4 fw-bold gradient-text mb-2">500+</h3>
                    <p class="text-secondary mb-0">Products</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="fade-in-up" style="animation-delay: 0.2s;">
                    <h3 class="display-4 fw-bold gradient-text mb-2">99.9%</h3>
                    <p class="text-secondary mb-0">Uptime</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="fade-in-up" style="animation-delay: 0.3s;">
                    <h3 class="display-4 fw-bold gradient-text mb-2">24/7</h3>
                    <p class="text-secondary mb-0">Support</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5" style="background: var(--bg-primary);">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2 class="display-5 fw-bold mb-4 gradient-text">Ready to Start Shopping?</h2>
                <p class="lead mb-4 text-secondary">Join thousands of satisfied customers and discover your next favorite product today.</p>
                <a asp-page="/Articles/Index" class="btn btn-primary btn-lg px-5 py-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="m1 1 7 7 7-7"></path>
                        <path d="M4.5 8.5L12 16l7.5-7.5"></path>
                    </svg>
                    Shop Now
                </a>
            </div>
        </div>
    </div>
</section>
