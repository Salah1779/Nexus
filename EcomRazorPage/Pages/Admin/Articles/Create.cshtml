@page
@model EcomApp.Pages.Articles.CreateModel 

@{
    ViewData["Title"] = "Create Article";
}

<link rel="stylesheet" href="~/css/articles.css" />

<div class="articles-container">
    <div class="page-header">
        <div>
            <a asp-page="./Index" class="back-link"> 
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Articles
            </a>
            <h1>Create New Article</h1>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly" class="alert alert-error"></div>

    <div class="form-container">
        <form method="post"> 
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="ArticleForm.Title">Title <span class="required">*</span></label> 
                <input asp-for="ArticleForm.Title" class="form-control" placeholder="Enter article title" />
                <span asp-validation-for="ArticleForm.Title" class="field-validation"></span> 
            </div>

            <div class="form-group">
                <label asp-for="ArticleForm.Description">Description <span class="required">*</span></label> 
                <textarea asp-for="ArticleForm.Description" class="form-control" rows="4" placeholder="Describe the article"></textarea>
                <span asp-validation-for="ArticleForm.Description" class="field-validation"></span> 
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="ArticleForm.Price">Price <span class="required">*</span></label> 
                    <input asp-for="ArticleForm.Price" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="ArticleForm.Price" class="field-validation"></span> 
                </div>

                <div class="form-group">
                    <label asp-for="ArticleForm.ImageUrl">Image URL<span class="required">*</span></label> 
                    <input asp-for="ArticleForm.ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                    <span asp-validation-for="ArticleForm.ImageUrl" class="field-validation"></span> 
                </div>
            </div>

            <div class="form-actions">
                <a asp-page="./Index" class="btn-secondary">Cancel</a> 
                <button type="submit" class="btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    Create Article
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}